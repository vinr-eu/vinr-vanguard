{
  "kind": "Service",
  "apiVersion": "v1",
  "name": "next-js-app",
  "gitHubUrl": "https://github.com/richy-vinr/next-js-app",
  "framework": "Next.js",
  "port": 3000,
  "path": "/",
  "ingressType": "host",
  "ingressHost": "next-js-app.vinr.eu",
  "variables": [
    {
      "name": "NEXT_PUBLIC_API_URL",
      "value": "https://next-js-app.vinr.eu"
    },
    {
      "name": "AUTH_SECRET",
      "ref": "secrets/auth-secret"
    },
    {
      "name": "EMAIL_SERVICE_URL",
      "ref": "services/email-service",
      "refExpression": "http://{{HOST}}:{{PORT}}"
    }
  ]
}
